<div class="container text-center mt-5 mb-10 col-md-6">
   <form class="card bg-light ml-3 mr-3" action="/game/add" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add New Game</h1>
      <div class="form-group mt-3 mb-3">
         <label class="fw-bold" for="">Game Title</label>
         <input class="form-control" type="text" style="width: 80%; margin: 0 auto;" name="title" required>
      </div>
      <div class="form-group mt-3 mb-3">
         <label class="fw-bold" for="">Game Description</label>
         <input class="form-control" type="text" style="width: 80%; margin: 0 auto;" name="description" required>
      </div>
      <div class="form-group mt-3 mb-3">
         <label class="fw-bold" for="">Game Trailer</label>
         <input class="form-control" type="text" style="width: 80%; margin: 0 auto;" name="trailer" required>
      </div>
      <div class="form-group mt-3 mb-3">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
</form>
<br>
</div>
<div class="d-flex justify-content-center">
  <a href="/toy" class="btn btn-primary">Back</a>
</div>

