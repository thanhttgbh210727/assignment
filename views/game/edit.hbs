<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/game/edit/{{ game._id }}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit game</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Game Title</label>
         <input class="form-control" type="text" name="title" value={{ game.title }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Game Description</label>
         <input class="form-control" type="text" name="description" value={{ game.description }} required maxlength="500">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Game Trailer</label><br>
         <iframe src="https://www.youtube.com/embed/{{game.trailer}}" width="250" height="150"></iframe>
         <input class="form-control" type="text" name="trailer" value={{ game.trailer }}>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
</form>
</div>
