<div class="container text-center">
   <h1  style="text-align: center; color: #FF0066; background-color: #F2F2F2; padding: 20px;">Toy List</h1>
   <br/><br/>
   <table class="table table-striped table-bordered">
      <tr>
         <th>Product Name</th>
         <th>Price</th>
         <th>Description</th>
         <th>Image</th>
         <th>Action</th>
        <th>
         <a class="btn btn-primary" style="padding: 5px;" href="/toy/add">Add Product</a>
        </th>
      </tr>
      {{#each toy}}
      <tr>
         <td>{{name}}</td>
         <td>${{price}}</td>
         <td>{{description}}</td>
         <td>
            <img src="{{image}}" width="150" height="150">
         </td>
         <td>
            <a class="btn btn-warning" href="/toy/edit/{{_id}}">Edit</a>
            <a class="btn btn-danger" href="/toy/delete/{{_id}}" onclick="return confirm('Are you sure to delete?');">Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>
<div class="d-flex justify-content-center">
  <a href="/" class="btn btn-primary">Back to homepage</a>
</div>

