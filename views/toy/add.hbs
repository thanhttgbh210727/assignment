<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/toy/add" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add New Product</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Product Name</label>
         <input class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" minlength="1" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Description</label>
         <input class="form-control" type="text" name="description" maxlength="500" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
</form>
</div>
<div class="d-flex justify-content-center">
  <a href="/" class="btn btn-primary">Back to homepage</a>
</div>

