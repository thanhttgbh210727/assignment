<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/toy/edit/{{ toy._id }}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit Product</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Product Name</label>
         <input class="form-control" type="text" name="name" value={{ toy.name }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" value={{ toy.price }} minlength="1" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Description</label>
         <input class="form-control" type="text" name="description" value={{ toy.description }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Image</label><br>
         <img src="{{ toy.image }}" width="150" height="150">
         <input class="form-control" type="text" name="image" value={{ toy.image }} required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
</form>
</div>
<div class="d-flex justify-content-center">
  <a href="/toy" class="btn btn-primary">Back</a>
</div>

