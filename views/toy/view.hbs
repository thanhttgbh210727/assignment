<div class="container text-center">
   <div class="col">
      <div class="row">
         <h1 class="text text-warning mb-3">Product Detail</h1>
      </div>
      <div class="row">
         <table class="table table-striped table-bordered">
            <tr>
               <th class="col-3" style="color: forestgreen; font-size:larger">Product Name</th>
               <td>{{ toy.name }}</td>
            </tr>
            <tr>
               <th class="col-3" style="color: forestgreen; font-size:larger">Price</th>
               <td>{{ toy.price }}</td>
            </tr>
            <tr>
               <th class="col-3" style="color: forestgreen; font-size:larger">Description</th>
               <td>{{ toy.description }}</td>
            </tr>
            <tr>
               <th class="col-3" style="color: forestgreen; font-size:larger">Image</th>
               <td><img src="{{ toy.image }}" width="150" height="150"></td>
            </tr>
            <tr>
               <th colspan="2">
                  <button class="btn btn-success">Buy</button>
               </th>
            </tr>
         </table>
      </div>
   </div>
</div>
<div class="d-flex justify-content-center">
  <a href="/toy/list" class="btn btn-primary">Back</a>
</div>
